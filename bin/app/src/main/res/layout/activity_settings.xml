<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/database_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/database_label" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/save_to_db"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/ButtonAsLinkRegular"
                android:text="@string/database_save"/>

            <Button
                android:id="@+id/restore_from_db"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                style="@style/ButtonAsLinkRegular"
                android:text="@string/database_restore"/>

            <Button
                android:id="@+id/clear_from_db"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                style="@style/ButtonAsLinkDangerous"
                android:text="@string/database_clear"/>

        </LinearLayout>

        <TextView
            android:id="@+id/account_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/account_label"/>

        <Button
            android:id="@+id/account_change_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            style="@style/ButtonAsLinkRegular"
            android:text="@string/account_change_name"/>
        <Button
            android:id="@+id/account_change_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            style="@style/ButtonAsLinkRegular"
            android:text="@string/account_change_email"/>
        <Button
            android:id="@+id/account_change_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            style="@style/ButtonAsLinkRegular"
            android:text="@string/account_change_password"/>
        <Button
            android:id="@+id/account_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            style="@style/ButtonAsLinkRegular"
            android:text="@string/account_logout"/>
        <Button
            android:id="@+id/account_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            style="@style/ButtonAsLinkDangerous"
            android:text="@string/account_delete"/>

    </LinearLayout>

</ScrollView>
