<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/dark_green</item>
        <item name="colorAccent">@color/yellow</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme1">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/dark_green</item>
        <item name="colorAccent">@color/yellow</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="backgroundColor">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="colorDangerous">@color/red</item>
        <item name="editTextStyle">@style/editText1</item>

        <item name="btnColor">@color/white</item>
        <item name="btnColorBg">@color/light_blue</item>
        <item name="btnColorEdge">@color/blue</item>

        <item name="rectColorBg1">@color/light_blue</item>
        <item name="rectColorEdge1">@color/blue</item>

        <item name="rectColorBg2">@color/lightest_grey</item>
        <item name="rectColorEdge2">@color/light_grey</item>

        <item name="rectColorBg3">@color/light_yellow</item>
        <item name="rectColorEdge3">@color/yellow</item>
    </style>

    <style name="Theme2">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/purple</item>
        <item name="colorAccent">@color/pink</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="backgroundColor">@color/almost_black</item>
        <item name="titleTextColor">@color/white</item>
        <item name="colorDangerous">@color/red</item>
        <item name="editTextStyle">@style/editText2</item>

        <item name="btnColor">@color/white</item>
        <item name="btnColorBg">@color/light_yellow</item>
        <item name="btnColorEdge">@color/yellow</item>

        <item name="rectColorBg1">@color/light_yellow</item>
        <item name="rectColorEdge1">@color/yellow</item>

        <item name="rectColorBg2">@color/pink</item>
        <item name="rectColorEdge2">@color/purple</item>

        <item name="rectColorBg3">@color/light_blue</item>
        <item name="rectColorEdge3">@color/blue</item>
    </style>

    <style name="editText1" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="editText2" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonAsLinkRegular" parent="@style/Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonAsLinkDangerous" parent="@style/Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorDangerous</item>
    </style>
</resources>
